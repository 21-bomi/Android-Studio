<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#5FB0BA">

        <ImageButton
            android:id="@+id/btn_menu_main"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/menu"
            android:contentDescription="메인페이지 메뉴 버튼" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_menu_main"
            android:layout_marginLeft="15dp"
            android:text="메인페이지"
            android:textSize="35sp"
            android:textColor="#202735"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="140dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/linear_border"
            android:clickable="true"
            android:focusable="true"
            android:onClick="firstLinearLayout">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="찾아요 게시판 버튼"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:src="@drawable/magnifier_color"
                android:background="@drawable/button_background"
                />

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="찾아요"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/linear_border"
            android:clickable="true"
            android:focusable="true"
            android:onClick="secondLinearLayout"
            >

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/light"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:contentDescription="발견했어요 게시판 버튼"
                android:background="@drawable/button_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발견했어요"
                android:textSize="35sp"
                android:paddingStart="16dp"/>
        </LinearLayout>

        <!-- 추가 버튼들을 계속해서 나열할 수 있음 -->

    </LinearLayout>

</RelativeLayout>
